{% trans_default_domain 'FOSUserBundle' %}
<style>

</style>
<div class="fos_user_user_show">
    <div class="col-md-12">
        <p>
            <label>Username</label>
            {{ user.username }}
        </p>
        <p>
            <label>Sex</label>
            <a href="#{{ user.profile.sex.id }}">
                {{ user.profile.sex.title }}
            </a>
        </p>
        <p>
            <label>Email</label>
            {{ user.email }}
        </p>
        <p>
            <label>Profession</label>
            <a href="#{{ user.profile.profession.id }}">
                {{ user.profile.profession }}
            </a>
        </p>
    </div>
    <div class="col-md-12">
        <p><Label>Uploaded images</Label></p>
        {% for image in user.profile.images %}
            <img class="profile-image-preview" src="/uploaded_images/{{ image.path }}"  />
        {% endfor %}
    </div>
</div>